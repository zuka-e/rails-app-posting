<% provide(:title, "ログイン") %>
<div class="basic-page row">
  <div class="col-sm-6 col-sm-offset-3 col-xs-12">
    <article class="article-box">
      <h1>ログイン</h1>
      <%= form_for(:session, url: login_path) do |f| %>
        <p class="alert alert-info">空欄を全てご記入ください。</p>

        <div class="form-box">

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
            placeholder: 'メールアドレス:', class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password",
            placeholder: '8文字以上', class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-info btn-block" %>
          </div>
          <div class="select-actions">
            <div>初めてのご利用ですか？</div>
            <%= link_to "新規登録する", signup_path, class:"btn btn-success left-btn", style: "left:0" %>
          </div>

        </div>
      <% end %>
    </article>
  </div>
</div>
