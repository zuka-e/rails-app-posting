<% provide(:title, "カテゴリー")%>
<div class="row basic-page">
	<div class="col-sm-8 col-sm-offset-2  col-xs-12 clearfix">
    <% @categories.each do |category| %>
      <div class="category-item">
        <%= link_to category_path(category.id) do %>
          <%= attachment_image_tag category, :image, :fill, 300, 250, format: 'jpg', fallback: "/no_image.jpg", size:'300x250'%>
          <h2><%= category.name %></h2>
        <% end %>
      </div>
    <% end %>
	</div>
</div>
