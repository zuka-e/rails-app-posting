<% provide(:title, @category.name)%>
<div class="basic-page row">
  <div class="col-sm-3 hidden-xs side-bar">
    <aside>
      <%= render  partial: 'shared/side_bar', locals: { sections: @sections } %>
    </aside>
  </div>
  <div class="col-sm-9 col-xs-12 index">
    <article class="article-box">
      <section>
        <h1><%= @category.name %></h1>
        <p><%= @category.content %></p>
      </section>
      <aside class="visible-xs" style="margin-top: 20px;">
        <%= render  partial: 'shared/side_bar', locals: { sections: @sections } %>
      </aside>
    </article>
    <article class="hidden-xs">
      <%= render partial: 'posts/posts', locals: { posts: @posts, title: "関連投稿" } %>
    </article>
  </div>
</div>

